<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.hello.hegberg.warondemand.addActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:text="Name: "
        android:layout_marginTop="30dp"
        android:id="@+id/desc_of_item_borrow" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textColor="#ffffff"
        android:id="@+id/nameItem"
        android:background="#134260" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:text="Minimum Starting Bid Price: "
        android:id="@+id/cost"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textColor="#ffffff"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/costItem"
        android:background="#134260" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:text="Description: "
        android:id="@+id/description"
        android:layout_marginTop="30dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textColor="#ffffff"
        android:id="@+id/descriptionItem"
        android:background="#134260" />


        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/addPicButton"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/ic_menu_camera"
            android:layout_gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity ="bottom|center_horizontal"
        android:orientation="horizontal">



        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_alignRight="@+id/backAddItem"
            android:orientation="horizontal"
            android:id="@+id/doneAddItem"
            android:layout_gravity="bottom" />


    </LinearLayout>





</LinearLayout>